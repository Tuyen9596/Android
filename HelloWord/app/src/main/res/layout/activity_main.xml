<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tuyen.com.helloword.MainActivity">

    <TextView
        android:id="@+id/txtname"
        android:layout_width="176dp"
        android:layout_height="69dp"
        android:text="Chao anh tuyen"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081"
        android:layout_below="@+id/btxacnhan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="91dp"
        android:layout_marginEnd="91dp"
        android:layout_marginTop="135dp" />

    <Button
        android:id="@+id/btxacnhan"
        android:layout_width="138dp"
        android:layout_height="45dp"
        android:text="Xac Nhan"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="146dp"
        android:layout_below="@+id/guideline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/imagelbl"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/txtname"
        android:layout_alignRight="@+id/txtname"
        android:layout_below="@+id/txtname"
        android:layout_marginTop="36dp"
        app:srcCompat="@android:drawable/arrow_down_float" />

</RelativeLayout>
